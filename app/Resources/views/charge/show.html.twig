{% extends 'back.html.twig' %}
{% block body %}
    <h1>Charge</h1>
<div class="col-xs-6 col-sm-3 pricing-box">
                                        <div class="widget-box widget-color-dark">
                                            <div class="widget-header">
                                                <h5 class="widget-title bigger lighter">{{ charge.nom }}</h5>
                                            </div>

                                            <div class="widget-body">
                                                <div class="widget-main">
                                                    <ul class="list-unstyled spaced2">
                                                        <li>
                                                            <i class="ace-icon fa fa-check green"></i>
                                                            {% if charge.date %}{{ charge.date|date('Y-m-d H:i:s') }}{% endif %}
                                                        </li>
                                                    </ul>

                                                    <hr>
                                                    <div class="price">
                                                      
                                                        <small>{{ charge.prix }}</small>
                                                    </div>
                                                </div>

                                                <div>
                                                   
                                                    <a href="{{ path('charge_index') }}" class="btn btn-block btn-inverse">retour</a>
                                                    <a href="{{ path('charge_edit', { 'id': charge.id }) }}" class="btn btn-block btn-inverse">Editer</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
  
{% endblock %}
